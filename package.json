{
  "name": "vfile-reporter-pretty",
  "version": "7.0.0",
  "description": "vfile utility to create a pretty report for a file",
  "license": "MIT",
  "keywords": [
    "vfile",
    "vfile-util",
    "vfile-reporter",
    "util",
    "utility",
    "reporter",
    "virtual",
    "file",
    "formatter",
    "lint",
    "eslint",
    "validate",
    "pretty"
  ],
  "repository": "vfile/vfile-reporter-pretty",
  "bugs": "https://github.com/vfile/vfile-reporter-pretty/issues",
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/unified"
  },
  "author": "Sindre Sorhus <sindresorhus@gmail.com> (https://sindresorhus.com)",
  "contributors": [
    "Sindre Sorhus <sindresorhus@gmail.com> (https://sindresorhus.com)",
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "sideEffects": false,
  "type": "module",
  "exports": "./index.js",
  "files": [
    "lib/",
    "index.d.ts",
    "index.js"
  ],
  "dependencies": {
    "eslint-formatter-pretty": "^5.0.0",
    "vfile": "^6.0.0",
    "vfile-to-eslint": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "c8": "^8.0.0",
    "chalk": "^5.0.0",
    "log-symbols": "^5.0.0",
    "prettier": "^2.0.0",
    "remark-cli": "^11.0.0",
    "remark-preset-wooorm": "^9.0.0",
    "type-coverage": "^2.0.0",
    "typescript": "^5.0.0",
    "xo": "^0.54.0"
  },
  "scripts": {
    "prepack": "npm run build && npm run format",
    "build": "tsc --build --clean && tsc --build && type-coverage",
    "format": "remark . -qfo && prettier . -w --loglevel warn && xo --fix",
    "test-api": "node --conditions development test.js",
    "test-coverage": "c8 --100 --reporter lcov npm run test-api",
    "test": "npm run build && npm run format && npm run test-coverage"
  },
  "prettier": {
    "bracketSpacing": false,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-wooorm"
    ]
  },
  "typeCoverage": {
    "atLeast": 100,
    "detail": true,
    "ignoreCatch": true,
    "strict": true
  },
  "xo": {
    "prettier": true
  }
}
